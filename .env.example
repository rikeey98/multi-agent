# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=soc_db
MONGODB_COLLECTION_ERRORS=errors
MONGODB_COLLECTION_LOGS=logs
MONGODB_COLLECTION_NOTIFICATIONS=notifications

# Oracle Database Configuration
ORACLE_USER=soc_user
ORACLE_PASSWORD=your_password_here
ORACLE_DSN=localhost:1521/ORCL

# Path Configuration
LOG_DIR=/var/log/sim
SOP_DIR=/opt/sop
BACKUP_DIR=/var/backup/soc
CONFIG_DIR=/etc/soc

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_CRITICAL_THRESHOLD=8
NOTIFICATION_TABLE=SOC_NOTIFICATIONS

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=300
AGENT_ENABLE_PARALLEL=true

# Environment
ENVIRONMENT=development
DEBUG=false
